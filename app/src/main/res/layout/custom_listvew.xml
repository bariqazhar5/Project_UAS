<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bgkotakwarna"
        android:backgroundTint="@color/grey"
       >

        <TextView
            android:id="@+id/lst_nomor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/bgkotakwarna"
            android:text=" 1"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
>
            <TextView
                android:id="@+id/lst_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 Januari 2024"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/lst_koordinat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-6.83,107.95"
            android:textSize="14dp"
            android:textColor="@color/teal_700"/>

        <TextView
            android:id="@+id/lst_wilayah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pusat gempa berada di darat 4 Km Timur Laut Kab.Sumedang"
            android:textSize="14dp"
            android:textColor="@color/teal_700"
            android:paddingBottom="10dp"/>
        </LinearLayout>


</LinearLayout>



</LinearLayout>